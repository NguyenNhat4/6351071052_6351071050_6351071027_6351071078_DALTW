@page
@model RegisterModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0">Register</h2>
                </div>
                <div class="card-body p-5">
                    <form id="registerForm" class="row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4 class="text-secondary text-center mb-4">Create a new account</h4>

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-4 col-md-12">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="text-muted">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.Name" class="form-control" placeholder="John Doe" />
                            <label asp-for="Input.Name" class="text-muted">Full Name</label>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="0123456789" />
                            <label asp-for="Input.PhoneNumber" class="text-muted">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="text-muted">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.ConfirmPassword" class="text-muted">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.StreetAddress" class="form-control" placeholder="123 Main St" />
                            <label asp-for="Input.StreetAddress" class="text-muted">Street Address</label>
                            <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <input asp-for="Input.City" class="form-control" placeholder="City Name" />
                            <label asp-for="Input.City" class="text-muted">City</label>
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4 col-md-6">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>-Select Role-</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <div class="col-12 text-center">
                            <button id="registerSubmit" type="submit" class="w-75 btn btn-lg btn-primary">Register</button>
                        </div>
                    </form>

                    <div class="text-center my-4">
                        <p class="text-muted">or</p>
                    </div>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="d-grid gap-2">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                        Register with @provider.DisplayName
                                    </button>
                                }
                            </div>
                        </form>
                    }
                    else
                    {
                        <div>
                            <p class="text-muted">
                                No external authentication services configured. See this
                                <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article</a>
                                about setting up external logins.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
