@model int
<div class="container d-flex justify-content-center align-items-center pt-5">
    <div class="col-lg-8 col-md-10 col-sm-12 text-center border rounded shadow p-4">
        <h1 class="text-success fw-bold">Order Placed Successfully!</h1>
        <p class="text-muted fs-5">Thank you for shopping with us! Your order has been placed and will be processed shortly.</p>

        <div class="my-4">
            <h4 class="text-dark">Order Number:</h4>
            <h2 class="text-primary fw-bold">#@Model</h2>
        </div>

        <img decoding="async" src="https://eso.clan-oberon.de/wp-content/uploads/2019/06/green-check-icon.jpg" alt="" class="wp-image-10466" width="70" height="70" srcset="https://eso.clan-oberon.de/wp-content/uploads/2019/06/green-check-icon.jpg 336w, https://eso.clan-oberon.de/wp-content/uploads/2019/06/green-check-icon-150x150.jpg 150w, https://eso.clan-oberon.de/wp-content/uploads/2019/06/green-check-icon-300x300.jpg 300w" sizes="(max-width: 70px) 100vw, 70px">

        <h3 class="mt-4 text-maroon fs-6">Your order has been placed successfully!</h3>

        <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3 px-4 py-2" role="button">
            <i class="bi bi-arrow-left"></i> Back to Shop
        </a>
    </div>
</div>
